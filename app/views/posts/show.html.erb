<h1> <%= @post.name %> </h1>

<div class="field">
  <% if @post.image.present? %>
      <%= image_tag @post.image.url(:medium) %>
  <% end %>
</div>
<br>

<p> <%= @post.content %> </p>

<div class="field">
<%= link_to "Delete", post_path, method: :delete, data: { confirm: "Are you sure you want to delete this post?"} %> <br>
<%= link_to "Edit", edit_post_path(@post) %>
</div>
