<h1>Add a new post!</h1>

<%= form_for @post do |f| %>

    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :content %>
        <%= f.text_field :content %>
    </div>



    <%= f.submit "Add new post!" %>

<% end %>

