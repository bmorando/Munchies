<h1>Login</h1>

<%= form_tag sessions_path do %>
    <% flash.each do |key, msg| %>
        <div><%= msg %></div>
    <% end %>

    <%= label_tag :email %>
    <%= text_field_tag :email %><br>

    <%= label_tag :password %>
    <%= password_field_tag :password %><br>

    <%= submit_tag "Log in" %>
<% end %>

<%= link_to "Sign Up", new_user_path %>

